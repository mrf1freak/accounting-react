generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum ProductEntryType {
  PURCHASE
  SALE
}

model User {
  id             Int            @id @default(autoincrement())
  email          String         @unique
  username       String         @unique
  password       String
  generalEntries GeneralEntry[]
  productEntries ProductEntry[]
}

model Account {
  id                 Int            @id @default(autoincrement())
  code               String         @unique
  name               String         @unique
  fromGeneralEntries GeneralEntry[] @relation("from")
  toGeneralEntries   GeneralEntry[] @relation("to")
  productEntries     ProductEntry[]
}

model Product {
  id       Int       @id @default(autoincrement())
  code     String    @unique
  name     String    @unique
  packings Packing[]
}

model Packing {
  id        Int     @id @default(autoincrement())
  product   Product @relation(fields: [productId], references: [id])
  size      Int
  quantity  Int     @default(0)
  productId Int
}

model GeneralEntry {
  id          Int      @id @default(autoincrement())
  date        DateTime
  description String
  user        User     @relation(fields: [userId], references: [id])
  amount      Int
  from        Account  @relation("from", fields: [fromId], references: [id])
  to          Account  @relation("to", fields: [toId], references: [id])
  fromId      Int
  toId        Int
  userId      Int
}

model ProductEntry {
  id                Int              @id @default(autoincrement())
  date              DateTime
  description       String
  user              User             @relation(fields: [userId], references: [id])
  type              ProductEntryType
  account           Account          @relation(fields: [accountId], references: [id])
  additionalCharges Int?             @default(0)
  userId            Int
  accountId         Int
}
